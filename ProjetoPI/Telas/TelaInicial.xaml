<Window x:Class="ProjetoPI.TelaInicial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoPI"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="Boletim de Ocorrência" Width="500" Height="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblRM" Content="RM" FontSize="20" Height="40" Width="41" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Label x:Name="lblSenha" Content="Senha" FontSize="20" Height="40" Width="68" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,29,0,0"/>
        <wpfTool:MaskedTextBox x:Name="txtRM" FontSize="20" Height="40" Width="40" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
        <PasswordBox x:Name="txtSenha" FontSize="20" Height="40" Width="40" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Margin="0,40,0,0"/>
        <Button Content="Login" Height="40" Width="60" Margin="319,273,113,56" FontSize="20" RenderTransformOrigin="0.55,0.5"/>
    </Grid>
</Window>
