<Window x:Class="ProjetoPI.TelaLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoPI"
        mc:Ignorable="d"
        Title="Login" Height="240.349" Width="400">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="203" VerticalAlignment="Top" Width="212" Cursor="No" Source="Imagem\PoliciaMilitarLogo.jpg" Opacity="0.4"/>
        <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Left" Margin="146,152,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="lblSenha" Content="Senha" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="146,180,0,0" FontSize="16"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Margin="227,152,0,0"/>
        <TextBox x:Name="txtSenha" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Margin="227,180,0,0"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="274,118,0,0" Click="btnLogin_Click" Height="29" FontSize="16"/>
    </Grid>
</Window>
